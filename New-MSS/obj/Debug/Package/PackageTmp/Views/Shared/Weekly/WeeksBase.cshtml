@model New_MSS.Models.WeeklyModel
<div>
    @if (Model.TelevisedGamesList.Count == 0)
    {
        <p>
            @Html.Label("There are no televised games at this time")</p>
    }
    else
    {
        <p>
        @if (Model.IsFootball)
        {
            <input id="btnWebGames" type="button" value="Hide Web Exclusive Games" class="show_hideWeb" />
        }
        @Html.DropDownList("DropDownTimeZone", Model.TimeZoneList)
        </p>
        DateTime endDate = Model.WeekDates.EndDate;
        Model.WeekDates.CurrentDate = Model.WeekDates.StartDate.AddDays(-1);
        while ((Model.WeekDates.CurrentDate = Model.WeekDates.CurrentDate.AddDays(1)) <= endDate)
        {
            if (Model.TelevisedGamesList.Count(x => Convert.ToDateTime(x.Time.Date) == Model.WeekDates.CurrentDate) > 0)
            {
                Html.RenderPartial("Weekly/WeekGamesTable", Model);
            }
        }
    }
</div>
