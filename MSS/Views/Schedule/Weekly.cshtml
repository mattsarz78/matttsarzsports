ottom: 2px; }.filters{margin:0}.navbar {box-shadow: 0 1px 1px rgba(0,0,0,.1);}</style>
	<style media="all and (min-width: 641px)" type="text/css">.game { padding: 2px; }.network {width: 135px;padding: 2px;}.coverage { width: 189px; }.coverageppv { width: 260px; }.ppv { width: 135px; }#RSNLists { width: 250px; }.imageDimensions {height: 40px;width: 55px;}#Main{padding-top:150px}.homelink,.seasonhome{display:block;}</style>
	<style type="text/css" media="only screen and (max-width: 640px)">.game { padding: 1px; }.network {width: 90px;padding: 0;}.coverage { width: 105px; }.coverageppv { width: 130px; }.ppv { width: 44.22px; }#RSNLists { width: 160px; }.imageDimensions {height: 29px;width: 40px;}#Main{padding-top:102px}.homelink,.seasonhome{display:inline-block;padding-right:10px;}</style>
}

