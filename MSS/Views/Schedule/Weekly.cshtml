@model MSS.Models.WeeklyModel
@{
	ViewBag.Title = String.Format("Week {0} schedule for {1}", Model.Week, Model.Year);
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<input id="sportYear" type="hidden" value="@Model.SportYear" />
<input id="week" type="hidden" value="@Model.Week" />
<nav class="navbar DONTPrint">
	<div class="container">
		<div>
			@Html.Partial("AddThis/AddThis")
			@Html.Partial("Google/GoogleSearchBar")
			@Html.Partial("AddThis/AddThisVar")
		</div>
		<div style="clear:both; padding-bottom: 5px"></div>
		<div>
			<span>
				<a class="homelink" href="@Url.Content("~/")">Home</a>
				<a class="seasonhome" href="@Url.Content("~/Season/Contents/" + Model.SportYear)">Season Home</a>
			</span>
				@if (!String.IsNullOrWhiteSpace(Model.FlexScheduleLink))
			{
			<a href="@Model.FlexScheduleLink" target="_blank">Available TV Windows</a><br />
			}
				<a href="@Url.Content("~/Schedule/WeeklyText/" + Model.SportYear + "/" + Model.Week)">Customizable Text-Only Page</a>
				@Html.Partial("WeeksNavigation")
				@if (Model.TelevisedGamesList.Any())
			{
			<div class="filters">
				@if (!Model.IsBowlWeek && !Model.IsBasketballPostseason)
				{
				<input id="btnWebGames" type="button" value="Hide Web Exclusive Games" class="show_hideWeb" />
				}
				@Html.Partial("TimeZoneDropDown")
			</div>
			}
		</div>
	</div>
</nav>
<div id="Main">
	<form action="@ViewBag.ActionName" id="WeekForm" method="post">
		<div>
			@if (Model.ShowRSNPartialView)
			{
				@Html.Partial("CoverageNotes/" + Model.SportYear + "/FSNWeek" + Model.Week)
			}
			@Html.Partial("WeeksBase")
			@if (!Model.IsBowlWeek)
			{
				if (Model.ShowNoTVPartialView)
				{
					@Html.Partial("NoTV", Model)
				}
			}
		</div>
		<p>
			<a href="#" class="back-to-top">Back to top</a>
		</p>
	</form>
</div>

@section scripts{
	<script type="text/javascript" src="@Scripts.Url("~/bundles/ajax")" defer="defer"></script>
	<script type="text/javascript" src="@Scripts.Url("~/bundles/weekly")" defer="defer"></script>
}
