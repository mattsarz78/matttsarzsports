@model MSS.Models.TelevisedGame
<td class="game">
    @if (!String.IsNullOrEmpty(Model.GameTitle))
    {
        <label><b><i>@Model.GameTitle</i></b></label><br />
    }
    @if (!String.IsNullOrEmpty(Model.Location))
    {
        if (!String.IsNullOrEmpty(Model.VisitingTeam))
        {
            <label>@Model.VisitingTeam vs. @Model.HomeTeam</label><br />
        }
        <label>(at @Model.Location)</label><br />
    }
    else
    {
        if (!String.IsNullOrEmpty(Model.VisitingTeam))
        {
            <label>@Model.VisitingTeam at @Model.HomeTeam</label>
        }
    }
</td>
<td class="network">
    @Html.Raw(Model.Network)
</td>
@if (Model.ShowPPVColumn)
{
    <td class="coverage">
        @Html.Raw(Model.CoverageNotes)
    </td>
    <td class="ppv">
        @Html.Raw(Model.PPV)
    </td>
}
else
{
    <td class="coverageppv">
        @Html.Raw(Model.CoverageNotes)
    </td>
}
<td class="time">
    @Html.Raw(Model.TimeString)
</td>
